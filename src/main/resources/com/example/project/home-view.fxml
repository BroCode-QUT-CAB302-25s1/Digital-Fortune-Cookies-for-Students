<?xml version="1.0" encoding="UTF-8"?>

<!-- Import necessary JavaFX components -->
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import javafx.scene.image.Image?>

<!-- Main container for the home screen -->
<BorderPane prefHeight="500.0" prefWidth="1000.0" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.project.controller.HomeController"
            styleClass="root">

    <!-- Link to the CSS stylesheet for this screen -->
    <stylesheets>
        <URL value="@style_sheet/home-stylesheet.css" />
    </stylesheets>

    <!-- Top section containing the title and instructions -->
    <top>
        <VBox alignment="CENTER" spacing="5">
            <!-- Title and Heading Section -->
            <padding>
                <Insets bottom="20" />
            </padding>
            <!-- Main title of the application -->
            <Label fx:id="welcomeTitle" text="Daily Fortune Cookie" />
            <!-- Instructions for the user -->
            <Label fx:id="instructionHeading" text="Click the cookie to reveal your fortune!" />
        </VBox>
    </top>

    <!-- Center section containing the fortune cookie image -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <!-- Uncracked Fortune Image Section -->
            <StackPane styleClass="fortune-image-container">
                <!-- The main interactive fortune cookie image -->
                <ImageView fx:id="fortuneCookieImage" fitWidth="450" fitHeight="400" preserveRatio="true">
                    <image>
                        <Image url="@Images/Uncrackedfortune.png" />
                    </image>
                </ImageView>
            </StackPane>
        </VBox>
    </center>

    <!-- Bottom section containing progress tracking and navigation -->
    <bottom>
        <VBox spacing="15">
            <!-- Progress Section -->
            <VBox styleClass="progress-pane">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15" />
                </padding>
                <!-- Progress section title -->
                <Label styleClass="progress-title" text="Your Study Progress" />
                <!-- Progress bar showing how many fortunes viewed -->
                <ProgressBar fx:id="progressBar" progress="0.65" maxWidth="Infinity" />
                <!-- Text describing progress -->
                <Label fx:id="progressText" styleClass="progress-text" text="You've viewed 13 fortunes this week. Keep going!" />
            </VBox>

            <!-- Navigation Bar -->
            <HBox styleClass="nav-bar" alignment="CENTER" spacing="5">
                <!-- Navigation buttons -->
                <Button styleClass="nav-button, selected" text="Home" />
                <Button styleClass="nav-button" text="Profile" />
                <Button styleClass="nav-button" text="Settings" />
            </HBox>

            <!-- Padding for the bottom section -->
            <padding>
                <Insets top="20" />
            </padding>
        </VBox>
    </bottom>

    <!-- Padding for the entire BorderPane -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</BorderPane>