<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="root"
            prefHeight="800.0" prefWidth="1200.0"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.project.controller.HomeController">

    <stylesheets>
        <URL value="@style_sheet/home-stylesheet.css" />
    </stylesheets>

    <top>
        <VBox alignment="CENTER" spacing="5">
            <padding>
                <Insets bottom="20" />
            </padding>
            <Label fx:id="welcomeTitle" text="Daily Fortune Cookie" />
            <Label fx:id="usernameLabel" text="Hello, [Student Name Here]!" />
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <!-- Fortune Cookie Image -->
            <StackPane styleClass="fortune-image-container">
                <ImageView fx:id="fortuneCookieImage" fitHeight="100" fitWidth="150" preserveRatio="true">
                    <!-- Set image in the controller -->
                </ImageView>
            </StackPane>

            <!-- Action Button -->
            <Button fx:id="newFortuneButton" text="Get New Fortune" />
        </VBox>
    </center>

    <bottom>
        <VBox spacing="15">
            <!-- Progress Section -->
            <VBox styleClass="progress-pane">
                <padding>
                    <Insets bottom="15" left="15" right="15" top="15" />
                </padding>
                <Label styleClass="progress-title" text="Your Study Progress" />
                <ProgressBar fx:id="progressBar" maxWidth="Infinity" progress="0.65" />
                <Label fx:id="progressText" styleClass="progress-text" text="You've viewed 13 fortunes this week. Keep going!" />
            </VBox>

            <!-- Navigation Bar -->
            <HBox alignment="CENTER" spacing="5" styleClass="nav-bar">
                <Button styleClass="nav-button, selected" text="Home" />
                <Button styleClass="nav-button" text="History" />
                <Button fx:id="userDisplayButton" styleClass="nav-button" text="Profile" />
                <Button styleClass="nav-button" text="Settings" />
            </HBox>

            <padding>
                <Insets top="20" />
            </padding>
        </VBox>
    </bottom>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>
