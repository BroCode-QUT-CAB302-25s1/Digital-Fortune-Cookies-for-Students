<?xml version="1.0" encoding="UTF-8"?>

<!-- Import necessary JavaFX components -->
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import javafx.scene.image.Image?>

<!-- Main container for the fortune screen -->
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.project.controller.MessageController"
            styleClass="fortune-screen">

    <!-- Link to the CSS stylesheet for this screen -->
    <stylesheets>
        <URL value="@style_sheet/fortune.css" />
    </stylesheets>

    <!-- Center content containing the cracked cookie and fortune message -->
    <center>
        <!-- StackPane allows the fortune message to overlay on top of the image -->
        <StackPane>
            <!-- Cracked fortune cookie image -->
            <ImageView fx:id="crackedCookieImage" fitWidth="550" fitHeight="500" preserveRatio="true">
                <image>
                    <Image url="@Images/Crackedfortune.png" />
                </image>
            </ImageView>

            <!-- Container for the fortune message that overlays the image -->
            <VBox alignment="CENTER" styleClass="fortune-message-container">
                <!-- The actual fortune text that will be populated by the controller -->
                <Label fx:id="fortuneMessage" styleClass="fortune-text" wrapText="true" />
            </VBox>
        </StackPane>
    </center>

    <!-- Padding for the entire BorderPane to ensure content doesn't touch the edges -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</BorderPane>