<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.project.controller.MessageController"
           styleClass="fortune-screen">

    <!-- Link to CSS -->
    <stylesheets>
        <URL value="@style_sheet/fortune.css" />
    </stylesheets>

    <!-- Main container -->
    <BorderPane>
        <!-- Cookie breaking animation container -->
        <center>
            <StackPane fx:id="fortuneContainer" styleClass="fortune-container">
                <!-- Cookie image container -->
                <VBox alignment="CENTER" spacing="20">
                    <ImageView fx:id="crackedCookieImage" 
                             fitWidth="550" 
                             fitHeight="500" 
                             preserveRatio="true"
                             styleClass="cookie-image">
                        <image>
                            <Image url="@Images/Crackedfortune.png"/>
                        </image>
                    </ImageView>
                </VBox>

                <!-- Fortune paper container -->
                <VBox fx:id="paperContainer" 
                      alignment="CENTER" 
                      styleClass="paper-container"
                      maxWidth="300"
                      maxHeight="200">
                    
                    <!-- Fortune message -->
                    <Label fx:id="fortuneMessage" 
                           styleClass="fortune-text" 
                           wrapText="true"
                           alignment="CENTER"/>
                </VBox>
            </StackPane>
        </center>

        <!-- Bottom controls -->
        <bottom>
            <HBox alignment="CENTER" spacing="20" styleClass="button-container">
                <padding>
                    <Insets bottom="20" top="10"/>
                </padding>
                
                <Button fx:id="closeButton" 
                        onAction="#handleClose"
                        text="Close"
                        styleClass="fortune-button"/>
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>