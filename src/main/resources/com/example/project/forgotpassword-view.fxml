<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="container" alignment="CENTER" prefHeight="450.0" prefWidth="500.0" spacing="20" styleClass="container" stylesheets="@style_sheet/forgotPassword.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.controller.ForgotPasswordController">

    <Label fx:id="titleLabel" styleClass="title" text="Forgot Password" />

    <VBox prefHeight="291.0" prefWidth="317.0" styleClass="input-group">
        <Label styleClass="label" text="Email" />
      <TextField fx:id="emailField" promptText="yourEmail@gmail.com" />

        <Label styleClass="label" text="Security Question" />
      <TextField fx:id="securityQuestionField" promptText="What ... " />

        <Label styleClass="label" text="Your Answer" />
      <TextField fx:id="securityAnswerField" promptText="Your answer ... " />
    </VBox>

    <HBox alignment="CENTER" prefHeight="38.0" prefWidth="327.0" spacing="20">
        <StackPane prefHeight="40.0" prefWidth="160.0">
            <Button fx:id="confirmButton" prefHeight="40.0" prefWidth="180.0" styleClass="save-button" text="Confirm" />
        </StackPane>
        <StackPane prefHeight="40.0" prefWidth="160.0">
            <Button fx:id="cancelButton" prefHeight="40.0" prefWidth="160.0" styleClass="save-button" text="Cancel" />
        </StackPane>
    </HBox>
</VBox>
