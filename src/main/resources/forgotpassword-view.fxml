<?xml version="1.0" encoding="UTF-8"?>
    <window title="Password Setting">
        <vbox spacing="20" padding="20" background="#F9FDF8" borderRadius="20">
            <label text="Password Setting" fontSize="24" fontWeight="bold" alignment="center"/>

            <vbox spacing="15">
                <label text="Your current password" fontSize="16"/>
                <hbox spacing="10">
                    <passwordField id="currentPassword" width="100%"/>
                    <icon name="eye-off" />
                </hbox>

                <label text="Your new password" fontSize="16"/>
                <hbox spacing="10">
                    <passwordField id="newPassword" width="100%"/>
                    <icon name="eye-off" />
                </hbox>

                <label text="Confirm your new password" fontSize="16"/>
                <hbox spacing="10">
                    <passwordField id="confirmPassword" width="100%"/>
                    <icon name="eye-off" />
                </hbox>
            </vbox>

            <button text="Save" background="#EAFCEA" textColor="black" padding="10 20" borderRadius="10" borderColor="#D48B8B"/>
        </vbox>
    </window>
</xfml>
